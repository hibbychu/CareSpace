rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.ownerUid || request.auth.token.admin == true);
      allow delete: if request.auth.token.admin == true;
    }
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.authorUid || request.auth.token.admin == true);
    }
    match /reports/{r} {
      allow create: if true;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
